<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ymtitlebar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minHeight="50dp"
                android:background="@drawable/ymtitlebar_bg">

    <TextView
            android:id="@+id/ymtitlebar_left_btn"
            style="@style/YmTitleBarBtnTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_centerVertical="true"
            android:gravity="center">

        <ImageView
                android:id="@+id/ymtitlebar_title_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/ymtitlebar_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ymdialog_btn_normal"
                android:textSize="19sp"
                android:visibility="gone">
        </TextView>

        <RadioGroup
                android:id="@+id/ymtitlebar_tabhost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:visibility="gone">
            <RadioButton
                    android:id="@+id/ymtitlebar_tabitem1"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:visibility="gone"/>

            <RadioButton
                    android:id="@+id/ymtitlebar_tabitem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:visibility="gone"/>
        </RadioGroup>
    </LinearLayout>

    <TextView
            android:id="@+id/ymtitlebar_right_btn"
            style="@style/YmTitleBarBtnTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

</RelativeLayout>